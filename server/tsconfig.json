{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "outDir": "bin"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ],
  "ts-node": {
    "swc": true
  }
}
